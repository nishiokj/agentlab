{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agent-lab.local/schemas/resolved_experiment_v0_5.json",
  "title": "Resolved Experiment v0.5",
  "type": "object",
  "additionalProperties": true,
  "required": ["version", "experiment", "dataset", "design", "baseline", "runtime"],
  "properties": {
    "version": { "const": "0.5" },
    "experiment": {
      "type": "object",
      "additionalProperties": true,
      "required": ["id", "name", "workload_type"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "name": { "type": "string", "minLength": 1 },
        "workload_type": { "type": "string", "minLength": 1 },
        "description": { "type": "string" },
        "owner": { "type": "string" }
      }
    },
    "dataset": {
      "type": "object",
      "additionalProperties": true,
      "required": ["path", "provider", "suite_id", "schema_version", "split_id", "limit"],
      "properties": {
        "path": { "type": "string", "minLength": 1 },
        "provider": { "type": "string", "minLength": 1 },
        "suite_id": { "type": "string", "minLength": 1 },
        "schema_version": { "type": "string", "minLength": 1 },
        "split_id": { "type": "string", "minLength": 1 },
        "limit": { "type": "integer", "minimum": 1 }
      }
    },
    "design": {
      "type": "object",
      "additionalProperties": true,
      "required": ["sanitization_profile", "comparison", "replications", "random_seed", "shuffle_tasks", "max_concurrency"],
      "properties": {
        "sanitization_profile": { "type": "string", "minLength": 1 },
        "comparison": { "type": "string", "enum": ["paired", "unpaired", "none"] },
        "replications": { "type": "integer", "minimum": 1 },
        "random_seed": { "type": "integer" },
        "shuffle_tasks": { "type": "boolean" },
        "max_concurrency": { "type": "integer", "minimum": 1 },
        "policies": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "scheduling": { "type": "string", "enum": ["paired_interleaved", "variant_sequential", "randomized"] },
            "comparison": { "type": "string", "enum": ["paired", "unpaired", "none"] },
            "retry": {
              "type": "object",
              "additionalProperties": false,
              "required": ["max_attempts"],
              "properties": {
                "max_attempts": { "type": "integer", "minimum": 1 },
                "retry_on": {
                  "type": "array",
                  "items": { "type": "string", "enum": ["error", "timeout", "failure"] }
                }
              }
            },
            "pruning": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "max_consecutive_failures": { "type": "integer", "minimum": 1 }
              }
            },
            "concurrency": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "max_in_flight_per_variant": { "type": "integer", "minimum": 1 },
                "require_chain_lease": { "type": "boolean" }
              }
            },
            "task_boundary": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "require_workspace_materialization": { "type": "boolean" }
              }
            }
          },
          "required": ["scheduling", "comparison", "retry"]
        }
      }
    },
    "baseline": {
      "type": "object",
      "additionalProperties": true,
      "required": ["variant_id", "bindings"],
      "properties": {
        "variant_id": { "type": "string", "minLength": 1 },
        "bindings": { "type": "object" }
      }
    },
    "variant_plan": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": ["variant_id", "bindings"],
        "properties": {
          "variant_id": { "type": "string", "minLength": 1 },
          "bindings": { "type": "object" }
        }
      }
    },
    "benchmark": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "policy": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "task_model": { "type": "string", "enum": ["independent", "dependent"] },
            "reset_strategy": { "type": "string", "enum": ["per_trial", "per_chain", "never"] },
            "evaluator_mode": { "type": "string", "enum": ["official", "custom"] },
            "scoring_lifecycle": { "type": "string", "enum": ["predict_then_score", "integrated_score"] },
            "required_evidence_classes": {
              "type": "array",
              "items": { "type": "string", "minLength": 1 }
            },
            "chain_failure_policy": { "type": "string", "enum": ["stop_on_error", "continue_with_flag"] }
          }
        },
        "adapter": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "command": { "type": "array", "items": { "type": "string", "minLength": 1 }, "minItems": 1 },
            "manifest": { "type": "object" }
          }
        }
      }
    },
    "runtime": {
      "type": "object",
      "additionalProperties": true,
      "required": ["agent", "dependencies", "policy"],
      "properties": {
        "agent": {
          "type": "object",
          "additionalProperties": true,
          "required": ["mode"],
          "properties": {
            "mode": { "type": "string", "enum": ["known_agent_ref", "custom_image"] },
            "command": {
              "oneOf": [
                { "type": "string", "minLength": 1 },
                {
                  "type": "array",
                  "items": { "type": "string", "minLength": 1 },
                  "minItems": 1
                }
              ]
            },
            "aliases": {
              "type": "object",
              "additionalProperties": {
                "oneOf": [
                  { "type": "string", "minLength": 1 },
                  {
                    "type": "array",
                    "items": { "type": "string", "minLength": 1 },
                    "minItems": 1
                  }
                ]
              }
            },
            "adapter": {
              "type": "object",
              "additionalProperties": false,
              "required": ["id", "version"],
              "properties": {
                "id": { "type": "string", "minLength": 1 },
                "version": { "type": "string", "minLength": 1 }
              }
            },
            "known_agent_ref": {
              "type": "object",
              "additionalProperties": false,
              "required": ["id", "version"],
              "properties": {
                "id": { "type": "string", "minLength": 1 },
                "version": { "type": "string", "minLength": 1 },
                "registry": { "type": "string", "minLength": 1 }
              }
            },
            "custom_image": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "image": { "type": "string", "minLength": 1 },
                "entrypoint": {
                  "type": "array",
                  "items": { "type": "string", "minLength": 1 },
                  "minItems": 1
                }
              }
            },
            "overrides": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "args": {
                  "type": "array",
                  "items": { "type": "string", "minLength": 1 }
                },
                "env": {
                  "type": "object",
                  "additionalProperties": { "type": "string" }
                },
                "env_from_host": {
                  "type": "array",
                  "items": { "type": "string", "minLength": 1 }
                }
              }
            }
          }
        },
        "dependencies": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "assets": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["source_from_host", "mount_path"],
                "properties": {
                  "id": { "type": "string", "minLength": 1 },
                  "source_from_host": { "type": "string", "minLength": 1 },
                  "mount_path": { "type": "string", "minLength": 1 },
                  "read_only": { "type": "boolean" },
                  "required": { "type": "boolean" }
                }
              }
            },
            "file_staging": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["source_from_host", "destination_path"],
                "properties": {
                  "source_from_host": { "type": "string", "minLength": 1 },
                  "destination_path": { "type": "string", "minLength": 1 },
                  "required": { "type": "boolean" }
                }
              }
            },
            "services": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": true,
                "required": ["id", "kind", "path"],
                "properties": {
                  "id": { "type": "string", "minLength": 1 },
                  "kind": { "type": "string", "minLength": 1 },
                  "path": { "type": "string", "minLength": 1 }
                }
              }
            }
          }
        },
        "policy": {
          "type": "object",
          "additionalProperties": true,
          "required": ["timeout_ms", "network", "sandbox"],
          "properties": {
            "timeout_ms": { "type": "integer", "minimum": 1 },
            "network": {
              "type": "object",
              "additionalProperties": true,
              "required": ["mode", "allowed_hosts"],
              "properties": {
                "mode": { "type": "string", "enum": ["none", "full", "allowlist_enforced"] },
                "allowed_hosts": { "type": "array", "items": { "type": "string", "minLength": 1 } }
              }
            },
            "sandbox": {
              "type": "object",
              "additionalProperties": true,
              "required": ["mode"],
              "properties": {
                "mode": { "type": "string", "enum": ["container", "local"] },
                "image": { "type": "string", "minLength": 1 },
                "root_read_only": { "type": "boolean" },
                "run_as_user": { "type": "string", "minLength": 1 },
                "hardening": {
                  "type": "object",
                  "additionalProperties": true,
                  "properties": {
                    "no_new_privileges": { "type": "boolean" },
                    "drop_all_caps": { "type": "boolean" }
                  }
                },
                "resources": {
                  "type": "object",
                  "additionalProperties": true,
                  "properties": {
                    "cpu_count": { "type": "integer", "minimum": 1 },
                    "memory_mb": { "type": "integer", "minimum": 1 }
                  }
                }
              }
            }
          }
        },
        "telemetry": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "trajectory_path": { "type": "string", "minLength": 1 },
            "causal_extraction": { "type": "string", "minLength": 1 }
          }
        }
      }
    }
  }
}
