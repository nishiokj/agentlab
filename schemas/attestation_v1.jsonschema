{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agent-lab.local/schemas/attestation_v1.json",
  "title": "Attestation v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "resolved_experiment_digest", "events_hashchain", "grades_summary"],
  "properties": {
    "schema_version": { "const": "attestation_v1" },
    "resolved_experiment_digest": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" },
    "image_digest": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" },
    "sbom": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "format": { "type": "string" },
        "artifact_ref": { "type": "string", "pattern": "^artifact://sha256/[0-9a-f]{64}$" }
      }
    },
    "events_hashchain": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["trial_id", "head"],
        "properties": {
          "trial_id": { "type": "string", "minLength": 1 },
          "head": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" }
        }
      }
    },
    "artifact_store_root": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" },
    "grades_summary": { "$ref": "grades_v1.jsonschema" },
    "harness_identity": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "source_digest": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" },
        "exec_digest": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" },
        "entry_command": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "minItems": 1
        },
        "runtime_fingerprint": { "type": "object", "additionalProperties": true },
        "lockfile_digest": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" }
      }
    },
    "hooks_schema_version": { "type": "string" },
    "trace_ingestion": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "mode": { "type": "string", "enum": ["none", "hooks", "otlp", "manifest"] },
        "artifact_ref": { "type": "string", "pattern": "^artifact://sha256/[0-9a-f]{64}$" }
      }
    },
    "redaction": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "rules_digest": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" },
        "summary_digest": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" }
      }
    },
    "ext": { "type": "object", "additionalProperties": true }
  }
}
