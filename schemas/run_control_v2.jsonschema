{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agent-lab.local/schemas/run_control_v2.json",
  "title": "Run Control v2",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "run_id", "status", "active_trials", "updated_at"],
  "properties": {
    "schema_version": { "const": "run_control_v2" },
    "run_id": { "type": "string", "minLength": 1 },
    "status": {
      "type": "string",
      "enum": ["running", "paused", "interrupted", "completed", "failed", "killed"]
    },
    "active_trials": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/active_trial" }
    },
    "pause": {
      "oneOf": [
        { "$ref": "#/$defs/pause" },
        { "type": "null" }
      ]
    },
    "updated_at": { "type": "string", "format": "date-time" }
  },
  "$defs": {
    "active_adapter": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "version", "command_path"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "version": { "type": "string", "minLength": 1 },
        "command_path": { "type": "string", "minLength": 1 },
        "events_path": { "type": ["string", "null"] }
      }
    },
    "active_trial": {
      "type": "object",
      "additionalProperties": false,
      "required": ["trial_id", "worker_id", "schedule_idx", "variant_id", "started_at"],
      "properties": {
        "trial_id": { "type": "string", "minLength": 1 },
        "worker_id": { "type": "string", "minLength": 1 },
        "schedule_idx": {
          "oneOf": [
            { "type": "integer", "minimum": 0 },
            { "type": "null" }
          ]
        },
        "variant_id": { "type": ["string", "null"] },
        "started_at": {
          "oneOf": [
            { "type": "string", "format": "date-time" },
            { "type": "null" }
          ]
        },
        "control": {
          "oneOf": [
            { "$ref": "#/$defs/active_adapter" },
            { "type": "null" }
          ]
        }
      }
    },
    "pause": {
      "type": "object",
      "additionalProperties": false,
      "required": ["label", "requested_at"],
      "properties": {
        "label": { "type": "string", "minLength": 1 },
        "requested_at": { "type": "string", "format": "date-time" },
        "requested_by": { "type": "string", "minLength": 1 }
      }
    }
  }
}
