{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agent-lab.local/schemas/event_envelope_v1.json",
  "title": "Event Envelope v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "envelope_version",
    "schema_version",
    "event_type",
    "ts",
    "seq",
    "ids",
    "step",
    "trace",
    "dur_ms",
    "outcome",
    "payload_ref",
    "redaction",
    "hashchain"
  ],
  "properties": {
    "envelope_version": { "const": "1" },
    "schema_version": { "const": "0.3" },
    "event_type": { "type": "string", "minLength": 1 },
    "ts": { "type": "string", "format": "date-time" },
    "seq": { "type": "integer", "minimum": 0 },
    "ids": {
      "type": "object",
      "additionalProperties": false,
      "required": ["run_id", "trial_id", "variant_id", "task_id", "repl_idx"],
      "properties": {
        "run_id": { "type": "string", "minLength": 1 },
        "trial_id": { "type": "string", "minLength": 1 },
        "variant_id": { "type": "string", "minLength": 1 },
        "task_id": { "type": "string", "minLength": 1 },
        "repl_idx": { "type": "integer", "minimum": 0 }
      }
    },
    "step": {
      "type": "object",
      "additionalProperties": false,
      "required": ["index", "phase"],
      "properties": {
        "index": { "type": "integer", "minimum": 0 },
        "phase": { "type": "string", "minLength": 1 }
      }
    },
    "trace": {
      "type": "object",
      "additionalProperties": false,
      "required": ["trace_id", "span_id", "w3c_traceparent"],
      "properties": {
        "trace_id": { "type": "string", "minLength": 1 },
        "span_id": { "type": "string", "minLength": 1 },
        "parent_span_id": { "type": "string" },
        "w3c_traceparent": { "type": "string", "minLength": 1 }
      }
    },
    "dur_ms": { "type": "integer", "minimum": 0 },
    "outcome": {
      "type": "object",
      "additionalProperties": false,
      "required": ["status"],
      "properties": {
        "status": { "type": "string", "enum": ["ok", "error", "missing"] },
        "error_type": { "type": "string" },
        "message": { "type": "string" }
      }
    },
    "payload_ref": {
      "type": "string",
      "pattern": "^artifact://sha256/[0-9a-f]{64}$"
    },
    "redaction": {
      "type": "object",
      "additionalProperties": false,
      "required": ["applied", "mode"],
      "properties": {
        "applied": { "type": "boolean" },
        "mode": { "type": "string", "enum": ["store", "hash", "drop"] }
      }
    },
    "hashchain": {
      "type": "object",
      "additionalProperties": false,
      "required": ["prev", "self"],
      "properties": {
        "prev": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" },
        "self": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" }
      }
    },
    "ext": { "type": "object", "additionalProperties": true }
  }
}
