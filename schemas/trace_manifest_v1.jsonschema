{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agent-lab.local/schemas/trace_manifest_v1.json",
  "title": "Trace Manifest v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "format", "paths"],
  "properties": {
    "schema_version": { "const": "trace_manifest_v1" },
    "format": { "type": "string", "minLength": 1 },
    "paths": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 1
    },
    "version": { "type": "string" },
    "redaction": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "applied": { "type": "boolean" },
        "mode": { "type": "string", "enum": ["store", "hash", "drop"] }
      }
    },
    "ext": { "type": "object", "additionalProperties": true }
  }
}
