{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agent-lab.local/schemas/manifest_v1.json",
  "title": "Manifest v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "run_id", "created_at", "runner_version", "resolved_experiment"],
  "properties": {
    "schema_version": { "const": "manifest_v1" },
    "run_id": { "type": "string", "minLength": 1 },
    "created_at": { "type": "string", "format": "date-time" },
    "runner_version": { "type": "string", "minLength": 1 },
    "resolved_experiment": {
      "type": "object",
      "additionalProperties": false,
      "required": ["digest"],
      "properties": {
        "digest": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" }
      }
    },
    "image_digest": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" },
    "git": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "sha": { "type": "string" },
        "dirty": { "type": "boolean" },
        "diff_digest": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" }
      }
    },
    "tool_registry": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "version"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "version": { "type": "string", "minLength": 1 },
          "digest": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" }
        }
      }
    },
    "ext": { "type": "object", "additionalProperties": true }
  }
}
