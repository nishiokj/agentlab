{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agent-lab.local/schemas/experiment_overrides_v1.json",
  "title": "Experiment Overrides v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "values"],
  "properties": {
    "schema_version": { "const": "experiment_overrides_v1" },
    "manifest_path": { "type": "string", "minLength": 1 },
    "values": {
      "type": "object",
      "description": "Map from knob id to override value.",
      "additionalProperties": {
        "anyOf": [
          { "type": "string" },
          { "type": "number" },
          { "type": "boolean" },
          { "type": "array" },
          { "type": "object", "additionalProperties": true },
          { "type": "null" }
        ]
      }
    },
    "ext": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
