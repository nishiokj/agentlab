{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agent-lab.local/schemas/resolved_experiment_v0_3.json",
  "title": "Resolved Experiment v0.3",
  "type": "object",
  "additionalProperties": true,
  "required": ["version", "experiment"],
  "properties": {
    "version": { "const": "0.3" },
    "experiment": {
      "type": "object",
      "additionalProperties": true,
      "required": ["id"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "name": { "type": "string" },
        "description": { "type": "string" }
      }
    }
  }
}
