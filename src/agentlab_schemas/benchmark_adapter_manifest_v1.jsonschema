{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agent-lab.local/schemas/benchmark_adapter_manifest_v1.json",
  "title": "Benchmark Adapter Manifest v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "adapter_id",
    "adapter_version",
    "benchmark",
    "execution_mode",
    "record_schemas",
    "evaluator"
  ],
  "properties": {
    "schema_version": { "const": "benchmark_adapter_manifest_v1" },
    "created_at": { "type": "string", "format": "date-time" },
    "adapter_id": { "type": "string", "minLength": 1 },
    "adapter_version": { "type": "string", "minLength": 1 },
    "benchmark": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "split"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "version": { "type": "string" },
        "split": { "type": "string", "minLength": 1 },
        "source": { "type": "string" },
        "license": { "type": "string" }
      }
    },
    "execution_mode": {
      "type": "string",
      "enum": ["predict_then_score", "integrated_score"]
    },
    "record_schemas": {
      "type": "object",
      "additionalProperties": false,
      "required": ["prediction", "score"],
      "properties": {
        "prediction": { "const": "benchmark_prediction_record_v1" },
        "score": { "const": "benchmark_score_record_v1" }
      }
    },
    "evaluator": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "mode"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "version": { "type": "string" },
        "mode": { "type": "string", "enum": ["official", "custom"] },
        "command": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "minItems": 1
        }
      }
    },
    "capabilities": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "supports_containerized_scoring": { "type": "boolean" },
        "supports_official_evaluator": { "type": "boolean" },
        "requires_network_for_scoring": { "type": "boolean" },
        "deterministic_scoring": { "type": "boolean" }
      }
    },
    "ext": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
