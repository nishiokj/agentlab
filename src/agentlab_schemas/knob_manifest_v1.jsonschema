{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agent-lab.local/schemas/knob_manifest_v1.json",
  "title": "Knob Manifest v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "knobs"],
  "properties": {
    "schema_version": { "const": "knob_manifest_v1" },
    "created_at": { "type": "string", "format": "date-time" },
    "knobs": {
      "type": "array",
      "items": { "$ref": "#/$defs/knob" }
    },
    "ext": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "$defs": {
    "knob": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "json_pointer", "type"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "label": { "type": "string" },
        "description": { "type": "string" },
        "json_pointer": {
          "type": "string",
          "pattern": "^/.*"
        },
        "type": {
          "type": "string",
          "enum": ["string", "integer", "number", "boolean", "array", "object"]
        },
        "role": {
          "type": "string",
          "enum": ["core", "harness", "benchmark", "safety", "analysis", "infra"]
        },
        "options": {
          "type": "array",
          "items": {
            "oneOf": [
              { "type": "string" },
              { "type": "number" },
              { "type": "integer" },
              { "type": "boolean" },
              { "type": "null" }
            ]
          }
        },
        "minimum": { "type": "number" },
        "maximum": { "type": "number" },
        "step": { "type": "number" },
        "unit": { "type": "string" },
        "scientific_role": {
          "type": "string",
          "enum": ["treatment", "control", "confound", "derived", "invariant"]
        },
        "autotune": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": { "type": "boolean" },
            "requires_human_approval": { "type": "boolean" }
          }
        }
      }
    }
  }
}
