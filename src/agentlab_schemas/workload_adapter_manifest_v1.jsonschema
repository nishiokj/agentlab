{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agent-lab.local/schemas/workload_adapter_manifest_v1.json",
  "title": "Workload Adapter Manifest v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "adapter_id",
    "adapter_version",
    "workload_type",
    "execution",
    "io_contract"
  ],
  "properties": {
    "schema_version": { "const": "workload_adapter_manifest_v1" },
    "created_at": { "type": "string", "format": "date-time" },
    "adapter_id": { "type": "string", "minLength": 1 },
    "adapter_version": { "type": "string", "minLength": 1 },
    "workload_type": {
      "type": "string",
      "enum": ["agent_harness", "trainer", "custom"]
    },
    "execution": {
      "type": "object",
      "additionalProperties": false,
      "required": ["mode", "command"],
      "properties": {
        "mode": { "type": "string", "enum": ["cli", "sdk"] },
        "command": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "minItems": 1
        }
      }
    },
    "io_contract": {
      "type": "object",
      "additionalProperties": false,
      "required": ["trial_input_schema", "trial_output_schema"],
      "properties": {
        "trial_input_schema": { "const": "trial_input_v1" },
        "trial_output_schema": { "const": "trial_output_v1" },
        "hook_schema": { "type": "string" }
      }
    },
    "default_objective": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string" },
        "direction": { "type": "string", "enum": ["maximize", "minimize"] }
      }
    },
    "ext": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
